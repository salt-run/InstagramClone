<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="cont">
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                <span class="sr-only">salt Blog</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <!-- <span class="icon-bar"></span>
                <span class="icon-bar"></span> -->
              </button>
              <a class="navbar-brand" href="<%= tops_path %>">Instagram Clone</a>
            </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li class="active"><a href="<%= tops_path %>"><span class="glyphicon glyphicon-home"></span>ホーム</a></li>
                <% if logged_in? %>
                  <li><a href="<%= user_path(current_user.id) %>"><span class="glyphicon glyphicon-file"></span>マイページ</a></li>
                  <li><a href="<%= new_picture_path %>"><span class="glyphicon glyphicon-pencil"></span>Pictureを投稿</a></li>
                  <li><a href="<%= pictures_path %>"><span class="glyphicon glyphicon-th-list"></span>Picture一覧</a></li>
                  <li><a href="<%= favorite_path(current_user.id) %>"><span class="glyphicon glyphicon-star-empty"></span>お気に入り一覧</a></li>
                  <li><a href="<%= session_path(current_user.id) %>" data-method="delete" rel="nofollow" data-confirm="Are you sure?"><span class="glyphicon glyphicon-book"></span>ログアウト</a></li>

                <% else %>
                  <li><a href="<%= new_user_path %>"><span class="glyphicon glyphicon-file"></span>Picture開設</a></li>
                  <li><a href="<%= new_session_path %>"><span class="glyphicon glyphicon-book"></span>ログイン</a></li>
                <% end %>

                <li><a href="#"><span class="glyphicon glyphicon-road"></span>ヘルプ</a></li>
              </ul>
            </div>
          </div>
        </nav>
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
      </header>

      <%= yield %>
    <div class="wrapper">
    </div>
    <footer class="footer">
      <p>Copyright (C) 2016-2017 Salt. All Rights Reserved.</p>
    </footer>
  </div>
</body>
</html>
